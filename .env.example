# DoWhiz local environment configuration
# Create a local .env (do not commit secrets). Replace placeholders as needed.

# -------- Core service (required for real runs) --------
# Azure OpenAI (used by Codex runner)
AZURE_OPENAI_API_KEY_BACKUP=
AZURE_OPENAI_ENDPOINT_BACKUP=

# Postmark (outbound replies + inbound hook setup)
POSTMARK_SERVER_TOKEN=
# Optional: override Postmark API base (defaults to https://api.postmarkapp.com)
POSTMARK_API_BASE_URL=

# -------- Service runtime (optional defaults) --------
RUST_SERVICE_HOST=0.0.0.0
RUST_SERVICE_PORT=9001
EMPLOYEE_ID=little_bear
# EMPLOYEE_CONFIG_PATH=
# WORKSPACE_ROOT=
# SCHEDULER_STATE_PATH=
# PROCESSED_IDS_PATH=
# USERS_ROOT=
# USERS_DB_PATH=
# TASK_INDEX_PATH=

# Scheduler tuning
SCHEDULER_POLL_INTERVAL_SECS=1
SCHEDULER_MAX_CONCURRENCY=10
SCHEDULER_USER_MAX_CONCURRENCY=3
POSTMARK_INBOUND_MAX_BYTES=26214400

# -------- Runner toggles --------
CODEX_MODEL=gpt-5.2-codex
CODEX_DISABLED=0
CODEX_SANDBOX=workspace-write

# -------- Docker per-task execution (optional) --------
RUN_TASK_DOCKER_IMAGE=dowhiz-service
RUN_TASK_DOCKER_AUTO_BUILD=1
# RUN_TASK_USE_DOCKER=1
# RUN_TASK_DOCKERFILE=
# RUN_TASK_DOCKER_BUILD_CONTEXT=
# RUN_TASK_DOCKER_NETWORK=
# RUN_TASK_DOCKER_DNS=
# RUN_TASK_DOCKER_DNS_SEARCH=

# -------- Claude runner (optional) --------
CLAUDE_MODEL=claude-opus-4-5
ANTHROPIC_FOUNDRY_RESOURCE=knowhiz-service-openai-backup-2
# ANTHROPIC_DEFAULT_OPUS_MODEL=
# ANTHROPIC_DEFAULT_SONNET_MODEL=
# ANTHROPIC_DEFAULT_HAIKU_MODEL=

# -------- GitHub auth for agent workflows (optional) --------
GITHUB_USERNAME=
GITHUB_PERSONAL_ACCESS_TOKEN=
# GH_TOKEN=
# GITHUB_TOKEN=

# -------- Live email / E2E tests (optional) --------
POSTMARK_LIVE_TEST=0
POSTMARK_INBOUND_HOOK_URL=
POSTMARK_TEST_FROM=
POSTMARK_TEST_TO=
POSTMARK_TEST_CC=
POSTMARK_TEST_BCC=
POSTMARK_TEST_SERVICE_ADDRESS=
POSTMARK_BATCH_COUNT=
RUST_SERVICE_TEST_HOST=127.0.0.1
